int Check(string[] array)
{
    int count = 0;
    for(int i=0;i<array.Length;i++)
    {
        if(array[i].Length <= 3)
        {
            count++;
        }
    }
    return count;
}


string[] CreateNewArray(string[] array, int count)
{
    string[] Array = new string[count];
    int j = 0;
    for(int i=0;i<array.Length;i++)
    {
        if(array[i].Length <= 3)
        {
            Array[j] = array[i];
            j++;
        }
    }
    return Array;
}

